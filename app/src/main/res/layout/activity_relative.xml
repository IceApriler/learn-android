<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一个按钮"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二个按钮"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三个按钮"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第四个按钮"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第五个按钮"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <Button
            android:id="@+id/button_r_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一个按钮"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二个按钮"
            android:layout_above="@id/button_r_01"
            android:layout_toLeftOf="@id/button_r_01"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三个按钮"
            android:layout_above="@id/button_r_01"
            android:layout_toRightOf="@id/button_r_01"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第四个按钮"
            android:layout_below="@id/button_r_01"
            android:layout_toLeftOf="@id/button_r_01"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第五个按钮"
            android:layout_below="@id/button_r_01"
            android:layout_toRightOf="@id/button_r_01"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <Button
            android:id="@+id/button_r_02"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="第一个按钮"
            android:layout_centerInParent="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二个按钮"
            android:layout_alignLeft="@id/button_r_02"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三个按钮"
            android:layout_alignRight="@id/button_r_02"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第四个按钮"
            android:layout_alignTop="@id/button_r_02"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第五个按钮"
            android:layout_alignBottom="@id/button_r_02"/>
    </RelativeLayout>
</LinearLayout>